{
  "manifest_version": 2,
  "name": "TabSwitch Browser Bridge",
  "version": "1.0.0",
  "description": "Bridge extension for TabSwitch Command Palette integration",
  
  "permissions": [
    "tabs",
    "history",
    "activeTab",
    "nativeMessaging",
    "<all_urls>"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "TabSwitch"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "applications": {
    "gecko": {
      "id": "tabswitch@tabswitch.com",
      "strict_min_version": "57.0"
    }
  }
}
